@page "/Performance"

@using BlazorDbTable.ViewModel;
@inject PerformanceVM PerformanceVM;
@inject NavigationManager Navigation

<table>
    <thead>
        <tr>
            <th style="width: 20%">First Name</th>
            <th style="width: 20%">Last Name</th>
            <th style="width: 20%">From Day</th>
            <th style="width: 20%">To Day</th>
            <th style="width: 20%">Num Tickets</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in PerformanceVM.Performance)
        {
            <tr>
                <td>@item.Emp.FName</td>
                <td>@item.Emp.LName</td>
                <td>@item.FromDay</td>
                <td>@item.ToDay</td>
                <td>@item.SumTicketsOverMin</td>
            </tr>
        }
    </tbody>
</table>

