@using BlazorDbTable.ViewModel;
@inject EmployeeVM EmployeeVM;

@if (EmployeeVM.Employees != null)
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in EmployeeVM.Employees)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.EMail</td>
                    <td>@item.FName</td>
                    <td>@item.LName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading...</p>
}