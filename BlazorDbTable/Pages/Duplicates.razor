@page "/Duplicates"

@using BlazorDbTable.ViewModel;
@inject DuplicatesVM DuplicatesVM;
@inject NavigationManager Navigation

<table>
    <thead>
        <tr>
            <th style="width: 10%; min-width: 100px">Id</th>
            <th style="width: 30%">Email</th>
            <th style="width: 30%">First Name</th>
            <th style="width: 30%">Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in DuplicatesVM.Employees)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.EMail</td>
                <td>@item.FName</td>
                <td>@item.LName</td>
            </tr>
        }
    </tbody>
</table>
